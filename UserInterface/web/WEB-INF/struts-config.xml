<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="driver" type="driver.DriverActionForm"/>
        <form-bean name="passenger" type="passenger.PassengerActionForm"/>
        <form-bean name="Record" type="hibernateServiseUser.User"/>
        <form-bean name="Records" type="hibernateServiseUser.RecordsForm"/>
    </form-beans>

    <action-mappings>
        <action path="/driverform"
                type="driver.DriverDispatchAction"
                name="driver"
                parameter="start"
                scope="request">
            <forward name="success" path="/jsp/setRoute.jsp"/>
            <forward name="error" path="/error.jsp"/>
        </action>
        <action path="/passengerform"
                type="passenger.PassengerDispatchAction"
                name="passenger"
                parameter="start"
                scope="request">
            <forward name="success" path="/jsp/getRoutes.jsp"/>
            <forward name="error" path="/error.jsp"/>
        </action>
        <action path="/save"
                type="records.DispatchRecords"
                name="Record"
                parameter="saveRecords"
                scope="request">
            <forward name="successful" path="/jsp/setRoute.jsp"/>
        </action>
        <action path="/getRecords"
                type="records.DispatchRecords"
                name="Records"
                parameter="getSpecificRecords"
                scope="request">
            <forward name="successful" path="/jsp/getRoutes.jsp"/>
        </action>
    </action-mappings>
</struts-config>