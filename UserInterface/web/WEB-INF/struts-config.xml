<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="directOn" type="redirectOnDriverOrPassengerPage.SelectDirectActionForm"/>
        <form-bean name="driver" type="driver.DriverActionForm"/>
        <form-bean name="passenger" type="passenger.PassengerActionForm"/>
    </form-beans>

    <action-mappings>
        <action path="/select"
                type="redirectOnDriverOrPassengerPage.SelectDirectDispatchAction"
                parameter="get"
                name="directOn">
            <forward name = "driver" path="/jsp/driver.jsp" />
            <forward name = "passenger" path="/jsp/passenger.jsp" />
            <forward name = "error" path="/error.jsp" />
        </action>
        <action path="/driverform"
                type="driver.DriverDispatchAction"
                name="driver"
                scope="request">
            <forward name = "success" path="/jsp/setRoute.jsp" />
            <forward name = "error" path="/error.jsp" />
        </action>
        <action path="/passengerform"
                type="passenger.PassengerDispatchAction"
                name="passenger"
                scope="request">
            <forward name = "success" path="/jsp/getRoutes.jsp" />
            <forward name = "error" path="/error.jsp" />
        </action>
       </action-mappings>

</struts-config>